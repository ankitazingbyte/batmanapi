<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @restaurant.phone %>
</p>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
<table>
  <thead>
    <tr>
      <th>Starter</th>
      <th>Price</th>
      <th>Salad</th>
      <th>Soup</th>
      <th>Pizza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<% @restaurant.menus.each do |menu| %>
      <tr>
        <td><%= menu.starter %></td>
        <td><%= menu.price %></td><br>
        <td><%= menu.salad %></td><br>
        <td><%= menu.soup %></td><br>
        <td><%= menu.pizza %></td>
        <td><%= link_to 'Show', menu %></td>
        <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
        <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
